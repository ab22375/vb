extends layout.pug

block content
    div(class="flex items-center mx-auto  max-w-2xl w-full bg-light-blue-50")
        
        div(class="w-full max-w-xl bg-white rounded shadow-lg p-8 m-4")
            h2(class="flex text-2xl") Contact form
            form(class="grid grid-cols-1 gap-y-2" action="https://formspree.io/f/mleagzgk" method="POST" _lpchecked="1")
                div(class="grid grid-cols-1 gap-y-2")
                    div(class="mx-auto w-full")
                        input(type="text" name="name" id="name" placeholder="name ... " class="p-3 rounded w-full border-2 border-gray-400")
                    div(class="mx-auto w-full")
                        input(type="email" name="email" id="email" placeholder="email ... " class="p-3 rounded w-full border-2 border-gray-400")
                    div(class="mx-auto w-full")
                        textarea(name="message" placeholder="Your message ...." id="message" rows="6" class="p-3 rounded resize w-full border-gray-400 border-2")
                    button(class="block bg-yellow-400 hover:bg-teal-dark text-white uppercase text-lg mx-auto p-4 rounded" type="submit") Submit

